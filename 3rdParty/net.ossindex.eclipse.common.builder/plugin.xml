<?xml version="1.0" encoding="UTF-8"?>
<plugin>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="net.ossindex.eclipse.common.builder.handlers.OssIndexBuildHandler"
            commandId="net.ossindex.eclipse.common.builder.commands.OssIndexBuildCommand">
         <enabledWhen>
            <and>
               <reference
                     definitionId="net.ossindex.eclipse.common.builder.ProjectSelected">
               </reference>
               <not>
                  <with
                        variable="net.ossindex.eclipse.common.builder.buildAutomatically.active">
                     <equals
                           value="ENABLED">
                     </equals>
                  </with>
               </not>
            </and></enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="net.ossindex.eclipse.common.builder.commands.OssIndexBuildCommand"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+6">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:project?after=buildClean">
         <command
               commandId="net.ossindex.eclipse.common.builder.commands.OssIndexBuildCommand"
               icon="icons/script_lightning.png"
               id="net.ossindex.eclipse.common.builder.menus.OssIndexBuildCommand"
               label="Manual Build"
               mnemonic="O">
         </command>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="net.ossindex.eclipse.common.builder.toolbars.OssIndexBuildToolbar">
            <command
                  commandId="net.ossindex.eclipse.common.builder.commands.OssIndexBuildCommand"
                  icon="icons/script_lightning.png"
                  id="net.ossindex.eclipse.common.builder.toolbars.OssIndexBuildCommand"
                  tooltip="Manual Build">
               <visibleWhen
                     checkEnabled="false">
                  <not>
                     <with
                           variable="net.ossindex.eclipse.common.builder.buildAutomatically.active">
                        <equals
                              value="ENABLED">
                        </equals>
                     </with>
                  </not>
               </visibleWhen>
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="net.ossindex.eclipse.common.builder.commands.OssIndexBuildCommand"
            name="(Re)Build Vulnerabilities">
      </command>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="net.ossindex.eclipse.common.builder.ProjectSelected">
         <with
               variable="selection">
            <iterate>
               <and>
                  <adapt
                        type="org.eclipse.core.resources.IResource">
                  </adapt>
                  <with
                        variable="net.ossindex.eclipse.common.builder.registeredNature.selected">
                     <equals
                           value="ENABLED">
                     </equals>
                  </with>
               </and>
            </iterate>
         </with>
      </definition>
   </extension>
   <extension
         point="org.eclipse.ui.services">
      <sourceProvider
            provider="net.ossindex.eclipse.common.builder.service.ManualBuildState">
         <variable
               name="net.ossindex.eclipse.common.builder.buildAutomatically.active"
               priorityLevel="workbench">
         </variable>
         <variable
               name="net.ossindex.eclipse.common.builder.registeredNature.selected"
               priorityLevel="workbench">
         </variable>
      </sourceProvider>
      <serviceFactory
            factoryClass="net.ossindex.eclipse.common.builder.service.CommonBuildServiceFactory">
         <service
               serviceClass="net.ossindex.eclipse.common.builder.service.ICommonBuildService">
         </service>
      </serviceFactory>
   </extension>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="net.ossindex.eclipse.common.builder.Setup">
      </startup>
   </extension>
</plugin>
